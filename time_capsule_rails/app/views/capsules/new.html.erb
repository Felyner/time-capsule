<h1>New Capsule</h1>

<%= form_for @capsule, :url => { :action => "create" } do |f| %>
    <p>
        <%= f.label :title %><br />
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :description %><br />
        <%= f.text_area :description %>
    </p>
    <p>
        <%= f.label :unlock %><br />
        <%= f.date_select :unlock %>
    </p>
    <%= f.submit "Create" %>
<% end %>

<br />
<%= link_to "Back", capsules_path %>